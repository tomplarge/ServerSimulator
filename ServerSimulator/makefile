CXX = g++
CXXFLAGS= -std=c++0x

all: $(Output)

$(Output) : $(objects)
	$(CXX) $^ -o $@

clean:
	-rm $(Output) $(objects)
.PHONY : clean

include $(sources:.cpp=.d)

